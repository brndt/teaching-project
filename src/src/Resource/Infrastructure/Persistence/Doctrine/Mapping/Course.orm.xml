<doctrine-mapping>
    <entity name="LaSalle\StudentTeacher\Resource\Domain\Aggregate\Course" table="course">
        <id name="id" type="uuid" />
        <field name="teacherId" type="uuid" nullable="false"/>
        <field name="categoryId" type="uuid" nullable="false"/>
        <field name="name" type="string" nullable="false"/>
        <field name="description" type="string" nullable="true"/>
        <field name="level" type="string" nullable="false"/>
        <field name="created" type="datetime_immutable" nullable="false"/>
        <field name="modified" type="datetime_immutable" nullable="true"/>
        <field name="status" type="status" nullable="false"/>
    </entity>
</doctrine-mapping>